<% if @round.question_count < @round.no_of_questions %>
  <div class="hidden-xs hidden-sm">
    <div class="container text-center">
      <h3><%= "Get ready for round #{@round_number}" %></h3>
    </div>
    <div class="container text-center">
      <h2><%= @round.category %></h3>
    </div>
  </div>
  <div class="hidden-md hidden-lg">
    <div class="container text-center">
      <div class="row">
        <div class="col-xs-12">
          <div class="btn btn-control-next" id="next"><%= link_to "First question", quiz_question_path(@first_question) %></div>
        </div>
      </div>
    </div>
  </div>
<% else %>
<div class="container text-center">
    <h3><%= "Round results" %></h3>
</div>
<% end %>
