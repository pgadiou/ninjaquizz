<% if @quiz.round_count < no_of_rounds %>
  <div class="hidden-xs hidden-sm">
    <div class="container text-center">
      <h3><%= "Welcome to the game" %></h3>
      <h3>To do = display number of connected users through action cable</h3>
      <div class="container"><%= qquestion.question.content %></div>
    </div>
  </div>
  <div class="hidden-md hidden-lg">
    <div class="container text-center">
      <div class="row">
        <div class="col-xs-12">
          <div class="btn btn-control" id="next"><%= link_to "First round", rounds_path(@first_round) %></div>
        </div>
      </div>
    </div>
  </div>
<% else %>
<div class="container text-center">
    <h3><%= "Results" %></h3>
</div>
<% end %>
