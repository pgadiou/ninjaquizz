<div class="hidden-xs hidden-sm">
  <div class="wrapper-display-admin">
    <div class="question-full-display">
      <%=  raw quiz_question.question.content %>
    </div>
  </div>
</div>
<div class="hidden-md hidden-lg">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12">
        <div class="question-display-admin-mobile"><p><%=  raw quiz_question.question.content %></p></div>
      </div>
      <% answers.each do |answer| %>
        <div class="col-xs-12">
          <div class="info-display-admin-mobile"><p><%=  answer.content %></p></div>
        </div>
      <% end %>
      <div class="col-xs-12">
        <%= link_to "Show answers", show_answers_quiz_question_path(quiz_question), remote: true, class: 'btn btn-control-next', id: 'show answers' %>
      </div>
      <div class="col-xs-12">
        <%= link_to "Back to question", show_question_quiz_question_path(quiz_question), remote: true, class: 'btn btn-control-back', id: 'show question' %>
      </div>
    </div>
  </div>
</div>
