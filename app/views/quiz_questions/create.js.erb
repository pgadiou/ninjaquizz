function refreshsavedQuestionForm(questionHTML, wrapperHTML) {
  const savedQuestionForm = document.getElementById(wrapperHTML);
  console.log(savedQuestionForm)
  savedQuestionForm.innerHTML = questionHTML;
}

<% if @quiz_question.position == nil %>
  refreshsavedQuestionForm('<%= j render "quizzes/edit_partials/newly_saved_question", question_position: @quiz_question.position, question: @quiz_question.question %>', 'wrapper_new_question<%=@quiz_question.round.id');
<% else %>
  refreshsavedQuestionForm('<%= j render "quizzes/edit_partials/newly_saved_question", question_position: @quiz_question.position, question: @quiz_question.question %>', 'wrapper_new_question<%=@quiz_question.position%>');
<% end %>
