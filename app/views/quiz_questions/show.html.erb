<%= simple_form_for(@quiz_answer) do |f| %>
  <% @answers.each do |answer| %>
    <div class="container ">
      <div class="row">
        <div class="col-xs-12 col-lg-6">
          <%= f.submit "#{answer}", class: 'btn btn-success btn-block' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
