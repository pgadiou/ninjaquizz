<div id="avatar-countdown">
  <div class="hidden-md hidden-lg">
    <div class="avatar-container">
      <div class="avatar-badge badge-countdown" id="countdown">
        <div id="avatar_countdown"><%= image_tag "#{user.avatar}.png" %></div>
        <div id="circle_countdown">
          <svg style=" position: absolute; top: 0; right: 0; width: 100%; height: 100%; transform: rotateY(-180deg) rotateZ(-90deg)">
            <circle r="46" cx="50" cy="50" style="stroke-dasharray: 290px; stroke-dashoffset: 0px; stroke-linecap: round; stroke-width: 4px; stroke: white; fill: none; animation: countdown 12s linear infinite forwards"></circle>
          </svg>
        </div>
      </div>
    </div>
</div>
